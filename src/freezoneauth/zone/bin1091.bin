//
// Default UI configuration
//

[PremiumView]
MarqueeScrollTicks = LONG, 2000

//
// Lobby Icon
//
[Icons]
LobbyIcon = SZ, "IDI_PURPLE"
LaunchpadIcon = SZ, "IDI_RED"


//
// user list info
//
[UserListCtl]
FontPreferred = FONT, {"Tahoma", 8, 400}
FontBackup = FONT, {"Arial", 8, 400}
[UserListCtl/colors]
HeadingFore = RGB,{255,255,255}
HeadingBack = RGB,{0,0,0}
NameFore = RGB,{255,255,255}
NameBack = RGB,{0,0,0}


//
// Window Manager
//
[WindowManager]
// the minimum size the window manger requires
MinSize = PT, {594,378}
AdSize = PT, {60, 468}
// The min and max sizes for the vertical panes. The
// right pane (userlist) are the only values we 
// clip too.
VerticalSplitterMinMax = RECT, {1,75,10000,180}
// The ideal size for the user list.
VerticalSplitterSizeIdeal = LONG, 128
HorizontalSplitterMinMax = RECT, {135,48,10000,10000}
// the % in thousands to allocate to the top (table) pane
HorizontalSplitterProportionIdeal = LONG, 800

//
// launchpad 
//
[LaunchPad]
// the default size of the launchpad
DefaultSize = PT, {482,344}
// the minimum size of the launchpad
MinSize = PT, {432,300}
// the size of the vertical splitter (0 - not visible)
SplitterWidth = LONG, 0
// the size of the user list
VerticalSplitterSizeIdeal = LONG, 102
// the colors for the information tab
ForgroundColor = RGB, {255,255,204}
BackgroundColor = RGB, {51,102,102}
[LaunchPad/InfoTab]
FontPreferred = FONT, {"Tahoma", 8, 400}
FontBackup = FONT, {"Arial", 8, 400}
[LaunchPad/Description]
FontPreferred = FONT, {"Tahoma", 10, 700}
FontBackup = FONT, {"Arial", 10, 700}

